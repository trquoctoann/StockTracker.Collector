# Stock Tracker Collector Configuration

# Stock symbols to collect (comma-separated)
STOCK_SYMBOLS=VIC,VCB,HPG,MSN,TCB,MWG,POW,SAB,BID,CTG

# Collection interval in minutes
COLLECTION_INTERVAL_MINUTES=30

# API Keys
FINHUB_API_KEY=your_finhub_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
IEX_CLOUD_API_KEY=your_iex_cloud_api_key_here
POLYGON_API_KEY=your_polygon_api_key_here
TWELVE_DATA_API_KEY=your_twelve_data_api_key_here
QUANDL_API_KEY=your_quandl_api_key_here

# Rate Limiting - Default values (sẽ được override tự động dựa trên loại data source)
DEFAULT_RATE_LIMIT=3000
DEFAULT_RATE_PERIOD=60

# Concurrency Settings
MAX_WORKERS=12
MAX_CONCURRENT_REQUESTS=100
SEMAPHORE_LIMIT=50
PREFIX_THREAD_NAME=StockTracker_

# Message Broker Configuration
# Supported types: kafka, rabbitmq
BROKER_TYPE=rabbitmq
BROKER_BATCH_SIZE=100
BROKER_FLUSH_INTERVAL=5

# Kafka Configuration (when BROKER_TYPE=kafka)
KAFKA_HOSTS=localhost:9092
KAFKA_TOPIC=stock_data

# RabbitMQ Configuration (when BROKER_TYPE=rabbitmq)
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE=stock_exchange
RABBITMQ_EXCHANGE_TYPE=topic
RABBITMQ_ROUTING_KEY=stock.data
RABBITMQ_QUEUE=stock_queue
RABBITMQ_DURABLE=true

# Legacy broker configuration (for backward compatibility)
BROKER_HOSTS=localhost:9092
BROKER_TOPIC=stock_data

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=stock_data

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/stocktracker
DATABASE_TABLE=stock_data

# File Output Configuration
OUTPUT_DIRECTORY=output
OUTPUT_FORMAT=json

# Logging Configuration
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# HTTP API Sender Configuration
HTTP_API_URL=https://your-api-endpoint.com/webhook
HTTP_API_TOKEN=your_api_token_here

# Performance Settings
ENABLE_UVLOOP=true
ENABLE_PERFORMANCE_MONITORING=true

# Data Source Specific Rate Limits (optional - sẽ được set tự động)
# VNStock API: 1000 requests per minute
# Finhub API: 300 requests per minute
# Alpha Vantage: 500 requests per minute
# YFinance Library: 2000 requests per minute
# VNStock Library: 500 requests per minute
# Web Scraping: 50-200 requests per minute (tùy loại)
